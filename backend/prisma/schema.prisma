model MailLog {
  id String @id

  from    String
  to      String
  title   String
  content String

  createdAt DateTime @default(now())
}

model PasswordResetRequest {
  id          String  @id @default(uuid())
  user        User    @relation(fields: [userId], references: [id])
  invalidated Boolean @default(false)
  keyHash     String

  createdAt DateTime @default(now())
  userId    String
}
